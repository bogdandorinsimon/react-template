{
  "semi": true,
  "singleQuote": false,
  "trailingComma": "none",
  "endOfLine": "lf",
  "bracketSpacing": true,
  "arrowParens": "always",
  "printWidth": 80,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^api/(.*)$",
    "^assets/(.*)$",
    "^components/(.*)$",
    "^context/(.*)$",
    "^features/(.*)$",
    "^hooks/(.*)$",
    "^layout/(.*)$",
    "^models/(.*)$",
    "^routes/(.*)$",
    "^translations/(.*)$",
    "^[./]",
    "./styles"
  ],
  "overrides": [
    {
      "files": "*.{scss,css}",
      "options": {
        "parser": "css"
      }
    },
    {
      "files": "*.{json}",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "*.{ts,tsx}",
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
